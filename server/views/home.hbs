<!--====== FUNCTIONALITY START ======-->
<section id="func">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Section Title -->
                <div class="section-title text-center">
                    <h2 class="title">How It Works</h2>
                </div>
            </div>
        </div> <!-- Row -->
        <div class="row justify-content-center">
            {{#each functionality as |box|}}
            <div class="col-lg-4 col-md-8 col-sm-9">
                <div class="box">
                    <div class="content">
                        <i class="{{box.icon}}"></i>
                        <h4 class="sub-title">{{box.subtitle}}</h4>
                        <p>{{box.text}}</p>
                    </div>
                </div> 
            </div>
            {{/each}}
        </div> <!-- Row End -->
    </div> <!-- Container End -->
</section>
<!--====== FUNCTIONALITY ENDS ======-->