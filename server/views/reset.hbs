<!--====== RESER START ======-->
<section id="reset">
    <div class="container">
        {{> title_bar title="Reset Password?"}}
        <div class="d-flex justify-content-center">
            <!--====== Form ======-->
            <form class="reset form" method="POST">
                <div class="form-inline">
                    <div class="form-group col-lg-6 col-md-6 col-sm-12">
                        <label for="password" class="control-label">New Password</label>
                        <input id="password" type="password" class="form-control" name="password" minlength="8" required>
                        <span class="help">Please select a strong password.</span>
                        <span class="unmet" style="color: red;">Your new password doesn't meet the listed requirements.</span>                  
                    </div>
                    <div class="form-group col-lg-6 col-md-6 col-sm-12">
                        <ul>
                            <li class="reqs invalid">  At least 1 <b>UPPERCASE</b> letter</li> 
                            <li class="reqs invalid">  At least 1 <b>lowercase</b> Letter</li> 
                            <li class="reqs invalid">  At least 1 <b>Number</b></li> 
                            <li class="reqs invalid">  At least 1 <b>Special Character</b></li> 
                            <li class="reqs invalid">  Minimum length of 8 characters</li> 
                        </ul>                
                    </div>
                    <div class="form-group col-lg-6 col-md-6 col-sm-12">
                        <label for="confirmed" class="control-label">Confirm New Password</label>
                        <input id="confirmed" type="password" class="form-control" name="confirmed" minlength="8" required>
                        <span class="help">Please confirm your password.</span>
                        <span class="unmatched" style="color: red;">Passwords do not match. Please try again.</span>
                    </div>
                </div>
                <span class="errorMsg red">{{message}}</span>
                <div class="submit-btn d-flex justify-content-center">
                    <input id="resetBtn" class="main-btn" type="submit" value="Submit">
                </div>
            </form> <!--====== End Form ======-->
        </div>
    </div>
</section>
<!--====== RESET ENDS ======-->
<script src="/assets/js/form-format.js"></script>
<script src="/assets/js/form-password.js"></script>
<script src="/assets/js/form-validate.js"></script>




