<!--====== TEAM SECTION START ======-->
<section id="team">
    <div class="container">
        {{> section_title title="Meet the Team"}}
        {{#each data as |member|}}
        {{#if (ifOdd member.id)}}
        <div class="row justify-content-center">
            {{/if}}
            <div class="col-lg-6 col-md-8 col-sm-9">
                <div class="box">
                    <div class="content">
                        <img src="assets/img/profiles/{{member.image}}" width="300" height="388" alt="{{member.name}}">
                        <h4 class="sub-title profile">{{member.name}}</h4>
                        <h6 class="label">{{member.title}}</h6>
                        <p>{{member.bio}}</p>
                        <br />
                        <p>{{member.about}}</p>
                    </div>
                </div>
            </div>
            {{#if (ifEven member.id)}}
        </div>
        {{/if}}
        {{/each}}
    </div> <!-- Container End -->
</section>
<!--====== TEAM SECTION ENDS ======-->