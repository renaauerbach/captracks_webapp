<!--====== PARTIAL - NAVIGATION ======-->
<div class="navigation fixed-top">
    <!-- Container Start -->
    <div class="container">
        <!-- Row Start -->
        <div class="row">
            <div class="col-lg-12">

                <!-- Navigation Start -->
                <nav class="navbar navbar-expand-lg align-items-end">

                    <!-- Logo -->
                    <a class="navbar-brand" href="/map">
                        <img class="logo-full" src="/assets/img/logo.png" alt="CapTracks Logo">
                        <img class="logo-icon" src="/assets/img/icon.png" alt="CapTracks Icon">
                    </a>

                    <!-- Button - Toggle Icon (Mobile) -->
                    <button class="navbar-toggler" type="button"
                        data-toggle="collapse"
                        data-target="#navContent"
                        aria-controls="navContent"
                        aria-expanded="false" aria-label="Toggle
                        navigation">
                        <span class="toggler-icon"></span>
                        <span class="toggler-icon"></span>
                        <span class="toggler-icon"></span>
                    </button>

                    <!-- Nav Links (Collapse) -->
                    <div class="collapse navbar-collapse" id="navContent">
                        <ul class="navbar-nav d-flex justify-content-between">
                            <!-- Find a Store -->
                            <li
                                {{#if (eq title 'Stores')}}
                                class="nav-item active"
                                {{else}}
                                class="nav-item"
                                {{/if}}>
                                <a href="/map">Find A Store</a>
                            </li>
                            <!-- Why Use CapTracks? -->
                            <div class="dropdown">
                                <li
                                    {{#if (eq title 'Why Use CapTracks?')}}
                                    class="nav-item active"
                                    {{else}}
                                    class="nav-item"
                                    {{/if}}>
                                    <button class="dropbtn">Why Use CapTracks? <i class="fas fa-chevron-down"></i></button>
                                </li>
                                <div class="dropdown-content">
                                    <a href="/customers">Customers</a>
                                    <a href="/vendors">Vendors</a>
                                </div>
                            </div>
                            <!-- About Us -->
                            <li
                                {{#if (eq title 'About Us')}}
                                class="nav-item active"
                                {{else}}
                                class="nav-item"
                                {{/if}}>
                                <a href="/about">About Us</a>
                            </li>
                            {{#if user}}
                            <!-- Nav - Dropdown -->
                            <div class="dropdown">
                                <li class="nav-btn">
                                    <button class="dropbtn">My Account <i class="fas fa-chevron-down"></i></button>
                                </li>
                                <div class="dropdown-content">
                                    <a href="/account">My Store</a>
                                    {{!-- <a href="/account/profile">My Profile</a> --}}
                                    {{!-- <a href="/account/settings">Settings</a> --}}
                                    {{!-- <a href="/report">Report a Problem</a> --}}
                                    <a href="/logout">Logout</a>
                                </div>
                            </div>
                            {{else}}
                            <li class="nav-btn">
                                <a href="/login">Vendor Login</a>
                            </li>
                            {{/if}}
                        </ul>
                    </div>
                </nav>
                <!-- Navigation End -->

            </div>
        </div>
        <!-- Row End -->
    </div>
    <!-- Container End -->
</div>