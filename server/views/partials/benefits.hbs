<!--====== BENEFITS SECTION ======-->
<section id="benefits">
    <!-- Container Start -->
    <div class="container">
        <!-- Title -->
        {{> section_title title=title}}
        <!-- Row Start -->
        <div class="row justify-content-center">
            {{#each data as |box|}}
            <div class="col-lg-4 col-md-8 col-sm-9">
                <div class="box">
                    <div class="content">
                        <i class="{{box.icon}}"></i>
                        <h4 class="sub-title">{{box.subtitle}}</h4>
                        <p>{{box.text}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        <!-- Row End -->

    </div>
    <!-- Container End -->
</section>