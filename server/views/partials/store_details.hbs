<div class="store-info">
    {{> store_titles label="Store Info"}}
    <div class="store-links">
        <ul>
            <form method="POST" class='store-form' action="/account/{{store._id}}">
                {{!-- Address --}}
                <li class="d-flex justify-content-start align-items-center">
                    <i class="fas fa-map-marker-alt"></i>
                    <input type="text" id="address" class="edit" name="address"
                        value="{{store.address}}" required/>
                    <p class="saved">{{store.address}}</p>
                </li>
                {{!-- Phone --}}
                <li class="d-flex justify-content-start align-items-center">
                    <i class="fas fa-phone"></i>
                    <input type="text" id="phone" class="edit" name="phone"
                        value="{{store.phone}}" required/>
                    <a href="tel:{{store.phone}}" class="saved">{{store.phone}}</a>
                </li>
                {{!-- Website URL --}}
                <li class="d-flex justify-content-start align-items-center">
                    <i class="fas fa-globe"></i>
                    <input type="text" id="url" class="edit" name="url"
                        value="{{store.url}}" required/>
                    <a href="{{store.url}}" class="saved">{{store.url}}</a>
                </li>
                {{!-- Store Hours --}}
                <li class="d-flex justify-content-start align-items-baseline">
                    <i class="far fa-hourglass"></i>
                    <div>
                        <p>Store Hours:</p>
                        {{#each store.hours as |day|}}
                        <p class="hours d-flex justify-content-between">
                            {{#if (eq day.open undefined)}}
                            <span class="day">{{day.day}}:</span> <span>Closed</span>
                            {{else}}
                            <span class="day">{{day.day}}:</span> <span>{{day.open}}
                                - {{day.close}}</span>
                            {{/if}}
                        </p>
                        {{/each}}
                    </div>
                </li>
            </ul>
        </form>
        <form method="POST" class="link-removed" action="/account/{{store._id}}">
            {{#if (eq (len store.links) 0)}}
            {{else}}
            {{#each store.links as |link|}}
            <li class="d-flex justify-content-start align-items-center">
                <i class="fas fa-link"></i>
                <a href={{link.url}} class="saved">{{link.title}}</a>
                <i class="fas fa-minus-circle" id="remove"></i>
            </li>
            {{/each}}
            {{/if}}
        </form>
        <form method="POST" class="link-form" action="/account/{{store._id}}">
            <li class="d-flex justify-content-start align-items-center">
                <input type="text" id="linkTitle" class="hide-link" name="linkTitle"
                    placeholder="Link Title" required/>
            </li>
            <li class="d-flex justify-content-start align-items-center">
                <input type="text" id="linkUrl" class="hide-link" name="linkUrl"
                    placeholder="URL" required/>
                <i class="fas fa-check" id="check"></i>
                <i class="fas fa-times" id="cancel"></i>
            </li>
            <li id="add" class="d-flex align-items-center">
                <i class="fas fa-plus"></i>
                <a href="javascript:void(0);">Add Link</a>
            </li>
        </form>
    </div>
</div>