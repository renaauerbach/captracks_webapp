<div class="row justify-content-between">
    {{!-- Store Info Column --}}
    <div class="col-lg-5 col-md-4 col-sm-3">
        {{> store_info store=store}}
    </div>
    {{!-- Capacity & Forum --}}
    <div class="col">
        {{!-- Capacity Functions & Form --}}
        {{> info_title label="Capacity"}}
        {{> form_capacity store=store}}
        <hr>
        {{!-- Capacity Data --}}
        {{> capacity_data details=details}}
        {{!-- Forum Functions & Form --}}
        {{> info_title label="Forum"}}
        {{> form_forum}}
        <hr>
        {{!-- Forum Posts --}}
        {{#each store.forum as |msg|}}
        {{> forum_post account=true msg=msg}}
        {{/each}}
    </div>
</div>