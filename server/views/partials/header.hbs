<!--====== HEADER ======-->
<section id={{id}} class="style-2">
    <!-- Container Start -->
    <div class="container">
        <!-- Row Start -->
        <div class="row justify-content-center">

            <!-- Column - Title Info -->
            <div class="col-10">
                <div class="section-title text-center">
                    <h2 class="title">{{title}}</h2>
                    {{#if quote}}
                    {{> header_quote}}
                    {{else}}
                    {{> header_text}}
                    {{/if}}
                </div>
            </div>
            <!-- Column End -->

        </div>
        <!-- Row End -->
    </div>
    <!-- Container End -->
</section>