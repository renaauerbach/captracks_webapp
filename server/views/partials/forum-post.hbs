 <div class="forum-box info-box">
    <div class="forum-content">
        {{#if account}}
        <!-- Button - Delete Post -->
        <form class="delete-forum" action="/post/delete/{{msg._id}}" method="POST">
            <button id="remove-forum" type="submit" class="post-delete"><i class="fas fa-times"></i></button>
        </form>
        {{/if}}
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="post-title">{{msg.title}}</h5>
            <h6 class="post-date">{{msg.createdOn}}</h6>
        </div>
        <br>
        <p class="post-text">{{msg.text}}</p>
    </div>
</div>