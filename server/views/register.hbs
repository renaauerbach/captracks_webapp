<!--====== CREATE ACCOUNT START ======-->
<section id="register">
    <div class="container">
        {{> title_bar title="Create an Account"}}
            <div class="d-flex justify-content-center">
                <form class="needs-validation" method="POST">
                    <div class="form-group row">
                        <div class="col mb-3">
                            <input id="firstName" type="text" class="form-control" name="firstName" placeholder="Your First Name" required>
                        </div>
                        <div class="col mb-3">
                            <input id="lastName" type="text" class="form-control" name="lastName" placeholder="Your Last Name" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col mb-3">
                            <input id="phone" type="text" class="form-control" name="phone" placeholder="Phone Number" minlength="12" maxlength="12" required>
                        </div>
                        <div class="col mb-3">
                            <input type="email" class="form-control" name="email" placeholder="E-mail" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col mb-3">
                            <input id="pwd" type="password" class="form-control" name="pwd" placeholder="Password" required>
                        </div>
                        <div class="col mb-3">
                            <input id="conf_pwd" type="password" class="form-control" name="conf_pwd" placeholder="Confirm Password" required>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <input class="main-btn" type="submit" name="submit" value="Submit">
                    </div>
                </form>
            </div>
    </div> <!-- Container End -->
</section>
<!--====== CREATE ACCOUNT ENDS ======-->
<script src="/assets/js/form.js"></script>
