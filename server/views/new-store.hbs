<!--====== NEW STORE START ======-->
<section id="new-store">
    <div class="container">
        {{> title_bar title="Add Your Store"}}
        <div class="d-flex justify-content-center">
            <form class="new-store register" name="form2" method="POST">
                {{#if stores}}
                <div class="form-group">
                    <span class="heading" for="existed">Link to a store already on our map</span>
                    <select type="select" class="form-control" name="existed">
                        <option value="">Select your store</option>
                        {{#each stores as |store|}}
                            <option value="{{store}}">{{store.name}} - {{store.address}}</option>
                        {{/each}}
                    </select>
                </div>
                <hr>
                <span class="heading">Or add your store info below</span>
                {{/if}}
                <div class="form-inline">
                    <div id="name-div" class="form-group">
                        <label for="name" class="control-label">Store Name</label>
                        <input id="name" type="text" class="form-control" name="name" required>
                        <span class="help">Please enter the name of your store.</span>
                    </div>
                </div>
                <div class="form-inline">
                    <div class="form-group" style="height: 61px;">
                        <label for="street" class="control-label">Street Address</label>
                        <input id="street" type="text" class="form-control" name="street" required>
                    </div>
                </div>
                <div class="form-inline">
                    <div id="city-div" class="form-group col-lg-6 col-md-6 col-sm-8">
                        <label for="city" class="control-label">City</label>
                        <input id="city" type="text" class="form-control" name="city" required>
                    </div>
                    <div class="form-group col-lg-2 col-md-2 col-sm-2 col-4">
                        <label for="state" class="control-label">State</label>
                        <input id="state" type="text" class="form-control" name="state" minlength="2" maxlength="2" oninput="this.value = this.value.toUpperCase()" required>
                    </div>
                    <div class="form-group col-lg-4 col-md-4 col-sm-2 col-8">
                        <label for="zip" class="control-label">Zip Code</label>
                        <input id="zip" type="text" class="form-control" name="zip" minlength="5" maxlength="5" oninput="this.value = this.value.slice(0, this.maxLength)" required>
                    </div>
                </div>
                <div class="form-inline">
                    <div class="form-group cold-md-6 col-md-6 col-sm-6">
                        <label for="phone" class="control-label">Phone</label>
                        <input id="phone" type="text" class="form-control" name="phone" minlength="14" maxlength="14" required>
                        <span class="help">Please enter the store's main phone number.</span>
                    </div>
                    <div class="form-group col-md-6 col-sm-6">
                        <label for="url" class="control-label">Website URL</label>
                        <input id="web" type="text" class="form-control" name="url" pattern="^\s*(http:\/\/www\.|https:\/\/www\.|http:\/\/|https:\/\/)?[a-z0-9]+([\-\.]{1}[a-z0-9]+)*\.[a-z]{2,5}(:[0-9]{1,5})?(\/.*)?\s*$" required>
                    </div>
                </div>
                <div id="hr" class="form-group">
                    <div class="form-check form-check-inline">
                        <label class="col-form-label" for="hours">Hours of Operation: </label>
                        <input class="form-check-input" type="checkbox" for="24hours" name="24hours" id="24hours">
                        <label class="form-check-label" for="24hours" name="24hours">Open 24/7</label>
                    </div>
                </div>
                <fieldset class="form-group">
                    {{> time_input name='Sun'}}
                    {{> time_input name='Mon'}}
                    {{> time_input name='Tues'}}
                    {{> time_input name='Wed'}}
                    {{> time_input name='Thurs'}} 
                    {{> time_input name='Fri'}}
                    {{> time_input name='Sat'}}
                </fieldset>
                <div id="survey" class="form-group">
                    <label class="col-form-label" for="survey">Survey Questions </label>
                </div>
                <div class="form-group">
                    <label for="phone" class="control-label survey">What is your business / what type of retailer are you?</label>
                    <textarea id="survey1" name="survey1" class="form-control" rows="3" required></textarea>
                </div>
                <div class="form-group">
                    <label for="phone" class="control-label survey">What digital advertisement services do you currently use?</label>
                    <textarea id="survey2"  name="survey2" rows="5" class="form-control" required></textarea>
                    <span class="temp">empty</span>
                    <span class="help">Please be specific.</span>
                </div>
                <div class="errorMsg">{{errMessage}}</div>
                <div class="d-flex justify-content-center">
                    <input class="main-btn" type="submit" value="Next">   
                </div>
            </form>
        </div>
    </div> <!-- Container End -->
</section>
<!--====== NEW STORE ENDS ======-->
<script src="/assets/js/form.js"></script>

