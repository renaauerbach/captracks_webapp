<!--====== CREATE ACCOUNT START ======-->
<section id="signup">
    <div class="container">
        {{> title_bar title="Create a Vendor Profile"}}
        <div class="d-flex justify-content-center">
            <form class="signup needs-validation" method="POST">
                <div class="form-inline">
                    <div class="form-group col-lg-6">
                        <label for="firstName" class="control-label">First name</label>
                        <input id="firstName" type="text" class="form-control" name="firstName" required>
                        <span class="help">Please enter your first name.</span>
                    </div>
                    <div class="form-group col-lg-6">
                        <label for="lastName" class="control-label">Last name</label>
                        <input id="lastName" type="text" class="form-control" name="lastName" required>
                        <span class="help">Please enter your last name.</span>      
                    </div>
                </div>
                <div class="form-inline">
                    <div class="form-group col-md-6">
                        <label for="phone" class="control-label">Phone</label>
                        <input type="text" id="phone" class="phone form-control" name="phone" minlength="16" maxlength="16" required>
                        <span class="help">Please enter your mobile phone number. We will never use this to contact you.</span>
                    </div>
                    <div class="form-group col-md-6"> 
                        <label for="email" class="control-label">Email</label>
                        <input type="email" class="form-control" name="email" required>
                        <span class="help">Please enter your email. We will never share your information with anyone.</span>
                    </div>
                </div>
                <div class="form-inline">
                    <div class="form-group col-md-6">
                        <label for="password" class="control-label">Password</label>
                        <input id="password" type="password" class="form-control" name="password" required>
                        <span class="help">Please select a strong password.</span>
                        <span class="error"></span>                   
                    </div>
                    <div class="form-group col-md-6">
                        <label for="confirmed" class="control-label">Confirm Password</label>
                        <input id="confirmed" type="password" class="form-control" name="confirmed" required>
                        <span class="help">Please confirm your password.</span>
                    </div>
                </div>
                <div class="errorMsg"></div>
                <div class="d-flex justify-content-center">
                    <input class="main-btn" type="submit" name="submit" value="Submit">
                </div>
            </form>
        </div>
    </div> <!-- Container End -->
</section>
<!--====== CREATE ACCOUNT ENDS ======-->
<script src="/assets/js/form.js"></script>
<script src="/assets/js/validator.js"></script>



